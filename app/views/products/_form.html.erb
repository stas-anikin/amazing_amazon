


<% if @product.errors.present? %>
<%= @product.errors.full_messages.join(", ") %>
<% end %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= form_with(model: @product, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
                <div class="form-group row">
                    <%= form.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Product name" %>
                    </div>
                </div>
            <div class="form-group row">
          <%= form.label :description, class: "col-2 col-form-label text-light" %>
                <div class="col-10">
                    <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of product" %>
                </div>
            </div>

                <div class="form-group row">
          <%= form.label :price, class: "col-2 col-form-label text-light" %>
                <div class="col-10">
                    <%= form.text_field :price, rows: 10, class: "form-control shadow rounded", placeholder: "Product price" %>
                </div>
            </div>               
        <div class="form-group row justify-content-center">
            <%= form.submit class: "btn btn-outline-light btn-lg" %>
        </div>
    </div>
    <%= link_to "[ Cancel and return to products listing ]", products_path, class: "text-info" %>

</div>
<% end %>
